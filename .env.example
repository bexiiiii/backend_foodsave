# Database Configuration
DATABASE_URL=jdbc:postgresql://your-host:5432/your-database
DATABASE_USERNAME=your_username
DATABASE_PASSWORD=your_strong_password_here

# Telegram Bot Tokens
TELEGRAM_BOT_TOKEN=your_client_bot_token_here
TELEGRAM_MANAGER_BOT_TOKEN=your_manager_bot_token_here

# Redis Configuration (Optional - falls back to simple cache if not provided)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_SSL=false
CACHE_TYPE=redis

# JWT Secret (должен быть минимум 64 символа)
JWT_SECRET=your_super_long_secret_key_minimum_64_characters_required_here

# Server Configuration
SERVER_PORT=8080

# Environment
SPRING_PROFILES_ACTIVE=prod
